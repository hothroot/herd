---
interface Props {
  pageTitle: string;
}
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { GTAG } from "astro:env/client";
import { STAGING } from "astro:env/server";

import '../styles/global.css';

const { pageTitle } = Astro.props;

const devMode = STAGING || import.meta.env.DEV;
const gtagURL = `https://www.googletagmanager.com/gtag/js?id=${GTAG}`;
---

<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src={gtagURL}></script>
    <script define:vars={{GTAG, devMode}}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      if (devMode) {
        gtag('config', GTAG, { 'debug_mode':true });
      } else {
        gtag('config', GTAG); // n.b. debug_mode:false does not work
      }
    </script>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} >
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">  <title>{pageTitle}</title>
  </head>
  
  <body>
     
  <Header />
  <h1>{pageTitle}</h1>
    <slot />
  <Footer /> 
</body>
</html>